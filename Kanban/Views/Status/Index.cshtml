@model List<Data.Object.Status>

@{
    ViewBag.Title = "Index";

    <script>
        
    </script>    
}

@{
<h2>Status</h2>

    @Html.ActionLink("Novo", "Criar", null, htmlAttributes: new { @class="btn btn-primary"});
    @Html.ActionLink("Voltar", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-default" });
    <br />
    <table class="table table-striped table-responsive">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idStatus</td>
                <td>@item.descricao</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { statusId = item.idStatus }, htmlAttributes: new { @class = "btn btn-primary"})
                    @Html.ActionLink("Excluir", "Excluir", new { statusId = item.idStatus }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
}

